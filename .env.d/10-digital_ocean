export DIGITALOCEAN_SSH_KEY_FINGERPRINT=1e:b2:9a:a8:84:0d:38:a4:3d:cf:36:f4:45:26:3e:0f

if [[ "$DIGITALOCEAN_ACCESS_TOKEN" == "" ]] ;
then
  echo "You need to add 'export DIGITALOCEAN_ACCESS_TOKEN=\"<your token>\"' in your ~/.secure_exports file"
else
  export DO_API_TOKEN="$DIGITALOCEAN_ACCESS_TOKEN"
fi  
