## Vagrant

function intoVagrant {
    if [ -d "vagrant" ]
    then
        pushd vagrant
        INTO_VAGRANT=1
    fi

    vagrant $1

    if [ "$INTO_VAGRANT" = "1" ]
    then
        popd
        unset INTO_VAGRANT
    fi
}

alias vup="intoVagrant up"
alias vprov="intoVagrant provision"
alias vreload="intoVagrant reload"
alias vssh="intoVagrant ssh"
alias vhalt="intoVagrant halt"
alias vkill="intoVagrant destroy"
alias vdest="intoVagrant destroy"
alias vdestroy="intoVagrant destroy"



